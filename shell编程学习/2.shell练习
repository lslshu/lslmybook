#！bin/bash
#centos安装nginx脚本
#菜单
menu()
{
  clear
  echo "##############------菜单------###############"
  echo "#1.安装Nginx" 
  echo "#2.卸载Nginx"
  echo "#3.退出程序"
  echo "#############################################"
}

#选择
choice()
{
  read -p "请输入菜单[1-3]：" select
}


#查看系统的版本
systemV=$(cat /etc/redhat-release|sed -r 's/.* ([0-9]+)\..*/\1/')
if [[ "$systemV" -eq 7 ]]; then
        #statements
        nginx_install
elif [[ "$systemV" -eq 6 ]]; then
        #statements
        nginx_install
else
        echo "没有对应的系统版本，请退出"
        exit 2
fi

#安装nginx
nginx_install(){
	echo "123"
}
#选择安装的函数 
while :
do
menu
choice
case $select in
1)
nginx_install
;;
2)
nginx_uninstall
;;
3)
exit
;;
*)
echo Sorry!
esac
done
